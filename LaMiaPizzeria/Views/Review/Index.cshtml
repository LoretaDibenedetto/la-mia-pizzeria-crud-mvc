@model List<Review>

  <div class="container text-white">
    <div class="row">
        <h2 class="text-center">Cosa dicono di noi</h2>
      <div class="col-12">

        @foreach(Review review in Model)
        {
            <div class="bord rounded-2 p-3 mb-3 text-white">
                <div class="border-bottom pb-3 mb-2">
                <strong>User:</strong>
                <span>@review.Name</span>
                </div>
                
                <p>@review.Description</p>
                    <a href="@Url.Action("Update", "Review", new {id = review.Id})" class="btn btn-outline-warning"> update</a>
                    <form asp-controller="Review" asp-action="Delete" asp-route-id="@review.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm mt-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                        </button>
                    </form>
            </div>
         }
         <div class="mt-5">
                <a asp-controller="Review" asp-action="Create" class="btn btn-outline-light"> + </a>
         </div>
     </div>
    </div>
</div>